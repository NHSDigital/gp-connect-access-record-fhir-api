<TargetEndpoint name="gp-connect-access-record-fhir-api-target">
  <FaultRules>
    <FaultRule name="access_token_expired">
      <Step>
        <Name>ExtractVariables.OAuthErrorFaultString</Name>
      </Step>
      <Step>
        <Name>AssignMessage.OAuthPolicyErrorResponse</Name>
      </Step>
      <Condition>oauthV2.OauthV2.VerifyAccessToken.failed</Condition>
    </FaultRule>
  </FaultRules>
  <PreFlow>
    <Request>
      <Step>
        <Name>OauthV2.VerifyAccessToken</Name>
      </Step>
      <Step>
        <Name>Quota</Name>
      </Step>
      <Step>
        <Name>SpikeArrest</Name>
      </Step>
    </Request>
  </PreFlow>
  <!--
    To point to a named target server as this is how it SHOULD be implemented:
    For example:
    <HTTPTargetConnection>
      <SSLInfo>
        <Enabled>true</Enabled>
      </SSLInfo>
      <LoadBalancer>
        <Server name="gp-connect-access-record-fhir-api" />
      </LoadBalancer>
    </HTTPTargetConnection>
  -->
    <HTTPTargetConnection>
        {{ HOSTED_TARGET_CONNECTION }}
    </HTTPTargetConnection>
</TargetEndpoint>
