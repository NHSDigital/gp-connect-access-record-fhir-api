<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage name="AssignMessage.Errors.InvalidNhsNumberOnQueryParameter">
    <AssignVariable>
        <Name>service.error.code</Name>
        <Ref>error.status.code</Ref>
    </AssignVariable>
    <AssignVariable>
        <Name>service.error.coding.code</Name>
        <Value>FORBIDDEN</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>service.error.coding.display</Name>
        <Value>User cannot perform this action</Value>
    </AssignVariable>
    <AssignVariable>
        <Name>service.error.diagnostics</Name>
        <Template>The NHS number on the "patient" query parameter does not match the NHS number of the authenticated user.</Template>
    </AssignVariable>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</AssignMessage>