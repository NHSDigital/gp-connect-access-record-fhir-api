<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout async="false" continueOnError="true" enabled="true" name="ServiceCallout.CallSSPHealthcheck">
    <DisplayName>ServiceCallout.CallSSPHealthcheck</DisplayName>
    <Properties/>
    <Request clearPayload="true" variable="healthcheckRequest">
        <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
        <Set>
            <Verb>GET</Verb>
            <Path>/_status</Path>
        </Set>
    </Request>
    <Response>SSPhealthcheckResponse</Response>
    <HTTPTargetConnection>
        {{ HOSTED_TARGET_CONNECTION }}
    </HTTPTargetConnection>
    <Timeout>20000</Timeout>
</ServiceCallout>
